// Mixins
//-------------

// Creates portfolio cards
mixin project(orientation, name, img, info, links, langs)

	section: .row.align-center.portfolio-card
		.small-12.medium-12.large-4.column
			.portfolio-card__img-container
				img.portfolio-card__img(src="#{img}", alt="")

		// Orientation will align the text on the right or left of the img
		.small-12.medium-12.large-6.column(class="#{orientation==='left' ? 'orient-left' : ''}")
			.portfolio-card__info-container
				h1.portfolio-card__project-name #{name}
				
				h5
					each lang in langs
						<span>#{lang}</span>

				p  #{info}

				.portfolio-card__btn-container
					each link in links
						a.button.small(href="#{link.url}") #{link.name}


